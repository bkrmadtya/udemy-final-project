<% include ../partials/header %>

    <div class="container">
         <header class="jumbotron">
            <div class="container  text-center">
                 <h2>Welcome to YelpCamp</h2>
                 <h4>View our hand-picked campgrounds from all over the world</h4>
                 <p>
                     <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                 </p>
            </div>
         </header>
         
         <div class="row">
             <div class="col-lg-12">
                 <h3>Our Most Popular Campgrounds</h3>
             </div>
             
         </div>
             
             <div class="row text-center" style="display:flex; flex-wrap: wrap">
                 <% campgrounds.forEach(function(campground){%>
                    <div class="col-md-3 col-sm-6">
                        
                        
                        <div class="thumbnail">
                            <img src="<%= campground.image %>">
                            <div class="caption">
                                <span class="d-inline pull-right align-middle">
                                    <a href="/campgrounds/<%= campground._id %>"></span></a>
                                </span>
                                
                                
                                <div class="caption">
                                    <h4><strong><%= campground.name%></strong></h4>
                                </div>
                                
                                <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More Info</a>
                            </div>
                        </div>
                    </div>
        
                <% }); %>
             </div>
         
        
        
        
    </div>

<% include ../partials/footer %>